<resources>
    <style name="BootSplashNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="BootSplashFadeInAnimation">
        <item name="android:windowEnterAnimation">@anim/bootsplash_fade_in</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="BootSplashFadeOutAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/bootsplash_fade_out</item>
    </style>

    <style name="Theme.SplashScreen.Common" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:navigationBarColor">?attr/windowSplashScreenBackground</item>
        <item name="android:statusBarColor">?attr/windowSplashScreenBackground</item>
        <item name="android:windowBackground">@drawable/compat_splash_screen</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.SplashScreen.Common">
        <item name="postSplashScreenTheme">?android:attr/theme</item>
        <item name="windowSplashScreenAnimatedIcon">@android:drawable/sym_def_app_icon</item>
        <item name="windowSplashScreenBackground">?android:colorBackground</item>
        <item name="windowSplashScreenBrandingImage">@null</item>
    </style>
</resources>
